#!/bin/bash
set -e

# Install opencode binary
install() {
    echo "Installing opencode..."
    curl -fsSL https://opencode.ai/install | bash -s -- --no-modify-path
}

# PATH is managed in zsh/.zshrc, no additional configuration needed
configure() {
    :
}

update() {
    echo "Updating opencode..."
    curl -fsSL https://opencode.ai/install | bash -s -- --no-modify-path
}

# Main
install
configure
