#!/usr/bin/env ruby -w
#
# repro - Download Rails bug reproduction templates
#
# Interactive script to select and download a Rails bug report template
# from the official Rails repository. Copies the output filename to clipboard.
#
# Usage: repro
#

templates = %w[
action_controller_gem
action_controller_main
action_mailbox_gem
action_mailbox_main
active_job_gem
active_job_main
active_record_gem
active_record_main
active_record_migrations_gem
active_record_migrations_main
active_storage_gem
active_storage_main
benchmark
generic_gem
generic_main
].zip(0..).to_h.invert

puts "Choose a reproduction script template"
templates.each do |index, template|
  puts "#{index}) #{template}"
end

template = templates[Integer(gets)]

url = "https://raw.githubusercontent.com/rails/rails/main/guides/bug_report_templates/#{template}.rb"
output = "#{template}_reproduction_#{Time.now.to_i}_test.rb"

`curl #{url} -o #{output}`
`echo "#{output}" | pbcopy`

puts "\nTemplate written to #{output}"
